# Production Environment
NODE_ENV=production
PORT=3000

# Production MongoDB
MONGODB_URI=mongodb://your-production-host:27017/ais_data_logger
MONGODB_DATABASE_NAME=ais_data_logger_prod

# Production API
API_PREFIX=api/v1
CORS_ORIGIN=https://yourdomain.com

# Production Security
JWT_SECRET=your_super_secure_production_jwt_secret
API_KEY=production_api_key_here

# Production Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/ais-logger

# Production MongoDB Options
MONGODB_MAX_POOL_SIZE=20
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME=30000
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# Production Retention
LOG_RETENTION_DAYS=365
MAX_BATCH_SIZE=5000

# External APIs
TELKOMSAT_API_URL=https://ais.telkomsat.co.id/api
TELKOMSAT_API_KEY=production_telkomsat_api_key

# Production Redis
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
